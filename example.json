{
    "name": "MindMap editor",
    "enabled": true,
    "mongodb": {
        "address": "vertx.mongopersistor",
        "host": "localhost",
        "port": 27017,
        "db_name": "default_db",
        "pool_size": 20
    },
    "web_server": {
        "web_root": "web",
        "host": "localhost",
        "port": 80,

        "bridge": true,
        "inbound_permitted": [
          {
            "address" : "vertx.mongopersistor",
            "match" : {
              "action" : "save",
              "collection" : "mindmap"
            }
          },
          {
            "address" : "vertx.mongopersistor",
            "match" : {
              "action" : "find",
              "collection" : "mindmap"
            }
          },
          {
            "address" : "vertx.mongopersistor",
            "match" : {
              "action" : "delete",
              "collection" : "mindmap"
            }
          }
        ]
    },
    "shell": {
        "crash.auth": "simple",
        "crash.auth.simple.username": "admin",
        "crash.auth.simple.password": "admin",
        "crash.ssh.port": "2000"
        }
}